@page "/login/userList"
@using UserApp.ViewModels
@inject UserViewModel user
@inject Blazored.SessionStorage.ISessionStorageService sessionStorage
<h1>Users</h1>
 <div class="card justify-content-center">
<table class="table table-striped">
    <thead>
        <tr>
            <th style="width: 30%">First Name</th>
            <th style="width: 30%">Last Name</th>
            <th style="width: 30%">Mobile</th>
            <th style="width: 30%">Email</th>
            <th style="width: 30%">Username</th>           
        </tr>
    </thead>
    <tbody>
        @if (users != null)
        {
            foreach (var user in users)
            {
                <tr>
                    <td>@user.firstName</td>
                    <td>@user.lastName</td>
                    <td>@user.mobile</td>
                    <td>@user.email</td>
                    <td>@user.userName</td>
                </tr>
            }
        }
        @if (loading)
        {
            <tr>
                <td colspan="4" class="text-center">
                    <span class="spinner-border spinner-border-lg align-center"></span>
                </td>
            </tr>
        }
    </tbody>
</table>
<label class="alert-info">@msg</label>
</div>
@code {
    public string Name;
    private bool loading;
    private IList<Models.User> users;
    public string msg = "";
    protected override async Task OnInitializedAsync()
    {
        Name =  await sessionStorage.GetItemAsync<string>("username");
        if (string.IsNullOrEmpty(Name))
        {
            msg = "Login first to fetch user data";
        }
        else
        {
            loading = true;
            users = await user.GetUser();
            loading = false;
        }
    }
}
